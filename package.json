{
  "name": "defi-autopilot",
  "version": "1.0.0",
  "description": "AI-powered cross-chain yield optimization platform for XRPL/Flare",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy": "hardhat run deployment/deploy.js --network flareTestnet",
    "backend": "cd backend && npm start",
    "frontend": "cd frontend && npm start",
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "setup": "npm install && cd backend && npm install && cd ../frontend && npm install"
  },
  "keywords": ["defi", "yield-farming", "cross-chain", "xrpl", "flare", "ai"],
  "author": "DeFi Autopilot Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.2",
    "@openzeppelin/contracts": "^4.9.3",
    "hardhat": "^2.17.1",
    "ethers": "^5.7.2",
    "dotenv": "^16.3.1",
    "concurrently": "^8.2.0"
  }
}
